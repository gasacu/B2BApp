@using B2BApp.Models;
@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}

<br/><br/>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Lista Produse</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Produs nou</a>
    </div>
    <br/>
</div>
<form method="post">
    <div class="row">
        <div class="col-md-2">
                <label for="">Interval pret</label>
            </div>
        <div class="col-md-3">
            <input type="number" class="form-control" name="lowAmount"/>
        </div>
        <div class="col-md-3">
            <input type="number" class="form-control" name="largeAmount"/>
        </div>
        <div class="col-md-3">
            <input type="submit" value="Cauta" class="btn btn-success"/>
        </div>
        <div class="col-md-3"></div>
    </div>
</form>
<br/>
<div>
    <table class="table table-striped border" id="myTable">
        <thead>
             <tr class="table-info">
            <th>
                Nume
            </th>
            <th>
                Pret
            </th>
            <th>
                Tara de origine
            </th>
            <th>
                Disponibilitate
            </th>
            <th>
                Categorie
            </th>
            <th>
                Producator
            </th>
            <th></th>
            <th></th>
        </tr>
        </thead>
       
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.ProductColor</td>
                <td>@item.IsAvailable</td>
                <td>@item.ProductTypes.ProductType</td>
                <td>@item.SpecialTags.SpecialTag</td>
                <td>
                    <partial name="_ButtonPartialProduct" model="@item.Id"/>
                </td>
            </tr>
        }
        </tbody>

        
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

    <script type="text/javascript">
        $(document).ready( function () {
    $('#myTable').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
} );
    </script>
}


@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["AlertMessage"]
    </div>
}