@model B2BApp.Models.Products
@{
    ViewData["Title"] = "Delete";
}
<br/>

<h2 class="text-info">Sterge Produs</h2><br/>
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-sumarry="ModelOnly" class="text-danger">

        </div>
        <div class="col-md-8">
             <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Name">Nume</label>
            </div>
            <div class="col-md-8">
                <input type="hidden" asp-for="Id" />
                <input asp-for="Name" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Price">Pret</label>
            </div>
            <div class="col-md-8">
                <input asp-for="Price" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

       @* <div class="form-group row">
            <div class="col-4">
                <label asp-for="Image"></label>
            </div>
            <div class="col-8">
                <input asp-for="Image" class="form-control" type="file" />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>*@

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="ProductColor">Tara de origine</label>
            </div>
            <div class="col-md-8">
                <input asp-for="ProductColor" readonly="readonly" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="ProductColor" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="ProductTypeId">Categorie</label>
            </div>
            <div class="col-md-8">
               @* <select asp-for="ProductTypeId" asp-items="ViewBag.productTypeId" class="form-control"></select>*@
               <input asp-for="ProductTypeId" readonly="readonly" class="form-control"/> 
            </div>
            <span asp-validation-for="ProductTypeId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="SpecialTagsId">Producator</label>
            </div>
            <div class="col-md-8">
                @*<select asp-for="SpecialTagsId" asp-items="ViewBag.TagId" class="form-control"></select>*@
                <input asp-for="SpecialTagsId" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="SpecialTagsId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="IsAvailable">Disponibilitate</label>
            </div>
            <div class="col-md-8">
                <input asp-for="IsAvailable" readonly="readonly" class="" type="checkbox" />
            </div>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>

        <div class="form-group">
            <h3>Doriti sa stergeti acest produs?</h3>
            <input type="submit" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" value="Sterge"/>
            <a asp-action="Index" class="btn btn-success">Inapoi la lista</a>
        </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
            <img src="~/@Model.Image" width="100%" style="border-radius: 5px; border: 1px solid #efefef" />
        </div>
       
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
