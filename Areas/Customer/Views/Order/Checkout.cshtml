@model B2BApp.Models.Order
@using B2BApp.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Order Details";
}
@{

    List<Products> products = HttpContextAccessor.HttpContext.Session.Get<List<Products>>("products");

    if(products == null)
    {
        products = new List<Products>();
    }
}
<br/>

<h2 class="text-info">DETALII LIVRARE</h2><br />
<p>Dacă aveți o comandă care depăşește greutatea de 50 kg, comanda va fi pregătită pe palet şi expediată prin compania de transport Pall-Ex.
Pretul livrării urmează sa vi-l comunicam telefonic și depinde de locația livrării și de greutatea acesteia.</p>
<br />
<form id="Order" asp-controller="Order" asp-action="Checkout" method="post" enctype="multipart/form-data">

    <div class="p-4 rounded border row">
        <div asp-validation-sumarry="ModelOnly" class="text-danger">

        </div>
        <div class="col-md-6">
             <div class="form-group row">
               <div class="col-md-4">
                    <label asp-for="Name">Nume Companie</label>
               </div>
               <div class="col-md-8">
                  <input asp-for="Name" class="form-control"/>
                  <span asp-validation-for="Name"  class="text-danger"></span>
               </div>
            </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="PhoneNo">Telefon</label>
            </div>
            <div class="col-md-8">
                <input asp-for="PhoneNo" class="form-control"/>
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            
        </div>
        
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Address">Adresa</label>
            </div>
            <div class="col-md-8">
                <input asp-for="Address" class="form-control"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Email"></label>
            </div>
            <div class="col-md-8">
               @* <select asp-for="ProductTypeId" asp-items="ViewBag.productTypeId" class="form-control"></select>*@
               <input asp-for="Email" class="form-control"/> 
               <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="OrderDate">Data</label>
            </div>
            <div class="col-md-8">
                @*<select asp-for="SpecialTagsId" asp-items="ViewBag.TagId" class="form-control"></select>*@
                <input asp-for="OrderDate" type="text" readonly="readonly" class="form-control"/>
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            
        </div>
        </div>
           
        <div class="col-md-6">
                <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>PRODUS</th>
                        <th>NUME</th>
                        <th>PRET</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in products)
                        {
                            <tr>
                                <td>
                                    <img src="~/@item.Image" height="100px" width="150px"/> 
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                            </tr>
                        }
                </tbody>
                </table>
                <div class="text-right">
                     <h3>Pret Total : @products.Sum(c=>c.Price)</h3>
                </div>
                <div class="form-group text-right">
                    <input type="submit" value="PLASEAZA COMANDA" class="btn btn-success"/>
                </div>  
        </div>
        
     
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $( "#OrderDate").datepicker({
                showAnim: "drop",
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
}
