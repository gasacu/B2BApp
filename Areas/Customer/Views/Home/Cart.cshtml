@using B2BApp.Models
@model List<Products>
@{
    ViewData["Title"] = "Cart";
}
<br />
<h1><b>Cos de cumparaturi</b></h1>
<br />
<br/>
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>PRODUS</th>
                <th>NUME</th>
                <th>PRET</th>
                <th>CATEGORIE</th>
                <th>TARA DE ORIGINE</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/@item.Image" width="200px" height="150px"/>
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductTypes.ProductType</td>
                    <td>@item.ProductColor</td>
                    <td>
                        <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">INAPOI LA CUMPARATURI</a>
    </div>
    <div class="col-6 text-right">
        <h3><b>TOTAL COS</b></h3>
        <h3>Total : @Model.Sum(c=>c.Price) </h3>
        <a asp-area="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-info">CONTINUA CU FINALIZAREA COMENZII</a>
    </div>
</div>